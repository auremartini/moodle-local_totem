{{!
	@template local_totem/totem_table_compact
	
	Show totem as a table
}}
<div data-region="totem-event-{{date}}" class="totem-table">
	{{#showDate}}<h3 id="totem-title-{{date}}">
	{{#collapsible}}
		<a href="javascript:
			 document.getElementById('totem-table-{{date}}').classList.add('hidden');
			 document.getElementById('totem-switchoff-{{date}}').classList.add('hidden');
			 document.getElementById('totem-switchon-{{date}}').classList.remove('hidden');"
		   id="totem-switchoff-{{date}}" class="{{#collapsed}}hidden{{/collapsed}}">&#9662;</a>
		<a href="javascript:
		     document.getElementById('totem-table-{{date}}').classList.remove('hidden');
		     document.getElementById('totem-switchoff-{{date}}').classList.remove('hidden');
		     document.getElementById('totem-switchon-{{date}}').classList.add('hidden');"
		   id="totem-switchon-{{date}}" class="{{^collapsed}}hidden{{/collapsed}}">&#9656;</a>
	{{/collapsible}}
	{{date_text}}</h3>{{/showDate}}
	<table id="totem-table-{{date}}" class="generaltable{{#collapsible}}{{#collapsed}} hidden{{/collapsed}}{{/collapsible}}">
		{{#records}}
			<tr>
			<td class="cell c0" width="40rem" style="{{eventtypecss}}">{{eventtype}}</td>
			<td class="cell c1" width="80rem"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{teacher}}<br /></span><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{teaching}}{{#teaching}}&nbsp;{{/teaching}}{{subject}}</span></td>
			<td class="cell c2" width="160rem"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{section}}<br /></span><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{timestart}}{{#timeend}}-{{timeend}}{{/timeend}}{{#time}}&nbsp;{{time}}{{/time}}</span></td>
			<td class="cell c3"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{displaytext}}</span></td>
			</tr>
		{{/records}}
	</table>	
</div>