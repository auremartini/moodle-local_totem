{{!
	@template local_totem/totem_list
	
	Show totem as a list
}}
<div data-region="totem-event-list" class="totem-table">
	<table id="totem-table-list" class="generaltable">
		<tr>
		<th class="cell c0">{{#str}} displaydate, local_totem {{/str}}</th>
		<th class="cell c0f" width="26px" align="center"><a href="filterselection.php?url={{url}}&action=date&date={{date}}&date_to={{date_to}}&eventtype={{eventtype}}&teacher={{teacher}}&teaching={{teaching}}&classsection={{classsection}}" class="icon-filter"><i class="icon fa fa-calendar fa-fw " title="{{#str}} displaydate, local_totem {{/str}}" aria-label="{{#str}} displaydate, local_totem {{/str}}"></i></a></th>
		<th class="cell c1">{{#str}} eventtype, local_totem {{/str}}</th>
		<th class="cell c1f" width="26px" align="center"></th>
		<th class="cell c2">{{#str}} teacher, local_totem {{/str}}</th>
		<th class="cell c2f" width="26px" align="center"><a href="filterselection.php?url={{url}}&action=teacher&date={{date}}&date_to={{date_to}}&eventtype={{eventtype}}&teacher={{teacher}}&teaching={{teaching}}&classsection={{classsection}}" class="icon-filter"><i class="icon fa {{#teacher}}fa-filter{{/teacher}}{{^teacher}}fa-square-o{{/teacher}} fa-fw " title="{{#str}} displaydate, local_totem {{/str}}" aria-label="{{#str}} displaydate, local_totem {{/str}}"></i></a></th>
		<th class="cell c3">{{#str}} teaching, local_totem {{/str}}</th>
		<th class="cell c3f" width="26px" align="center"><a href="filterselection.php?url={{url}}&action=teaching&date={{date}}&date_to={{date_to}}&eventtype={{eventtype}}&teacher={{teacher}}&teaching={{teaching}}&classsection={{classsection}}" class="icon-filter"><i class="icon fa {{#teaching}}fa-filter{{/teaching}}{{^teaching}}fa-square-o{{/teaching}} fa-fw " title="{{#str}} displaydate, local_totem {{/str}}" aria-label="{{#str}} displaydate, local_totem {{/str}}"></i></a></th>
		<th class="cell c4">{{#str}} classsection, local_totem {{/str}}</th>
		<th class="cell c4f" width="26px" align="center"><a href="filterselection.php?url={{url}}&action=classsection&date={{date}}&date_to={{date_to}}&eventtype={{eventtype}}&teacher={{teacher}}&teaching={{teaching}}&classsection={{classsection}}" class="icon-filter"><i class="icon fa {{#classsection}}fa-filter{{/classsection}}{{^classsection}}fa-square-o{{/classsection}} fa-fw " title="{{#str}} displaydate, local_totem {{/str}}" aria-label="{{#str}} displaydate, local_totem {{/str}}"></i></a></th>
		<th class="cell c5">{{#str}} displaytime, local_totem {{/str}}</th>
		<th class="cell c5f" width="26px" align="center"></th>
		<th class="cell c6">{{#str}} displaytext, local_totem {{/str}}</th>
		<th class="cell c6f" width="26px" align="center"></th>
		<th class="cell c7">{{#addbtn}}<a href="event.php?url={{url}}&date={{date}}"><i class="icon fa fa-calendar-plus-o fa-fw  " title="{{#str}} addtotemevent, local_totem {{/str}}" aria-label="{{#str}} addtotemevent, local_totem {{/str}}"></i></a>{{/addbtn}}</th>
		</tr>
		{{#records}}
			<tr>
			<td class="cell c0" colspan="2">{{date_text}}</td>
			<td class="cell c1" colspan="2" align="center" style="{{eventtypecss}}">{{eventtype}}</td>
			<td class="cell c2" colspan="2"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{teacher}}</span></td>
			<td class="cell c3" colspan="2"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{teaching}}{{#teaching}}&nbsp;{{/teaching}}{{subject}}</span></td>
			<td class="cell c4" colspan="2"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{section}}</span></td>
			<td class="cell c5" colspan="2"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{time}}</span></td>
			<td class="cell c6" colspan="2"><span style="{{#displayhidden}}color: #868e96;{{/displayhidden}}">{{displaytext}}</span></td>
			<td class="cell c7">
				{{#editbtn}}<a href="event.php?id={{id}}&url={{url}}"><i class="icon fa fa-cog fa-fw " title="{{#str}} edittotemevent, local_totem {{/str}}" aria-label="{{#str}} edittotemevent, local_totem {{/str}}"></i></a>{{/editbtn}}
				{{#copybtn}}<a href="event.php?id={{id}}&url={{url}}&action=copy"><i class="icon fa fa-copy fa-fw " title="{{#str}} copytotemevent, local_totem {{/str}}" aria-label="{{#str}} copytotemevent, local_totem {{/str}}"></i></a>{{/copybtn}}
				{{#showbtn}}<a href="event.php?id={{id}}&url={{url}}&action={{displayevent}}"><i class="icon fa fa-{{displayevent}} fa-fw " title="{{#displayhidden}}{{#str}} showtotemevent, local_totem {{/str}}{{/displayhidden}}{{^displayhidden}}{{#str}} hidetotemevent, local_totem {{/str}}{{/displayhidden}}" aria-label="{{#str}} showtotemevent, local_totem {{/str}}"></i></a>{{/showbtn}}
				{{#delete}}<a href="#" src="event.php?id={{id}}&url={{url}}" class="icon-delete"><i class="icon fa fa-trash fa-fw " title="{{#str}} deletetotemevent, local_totem {{/str}}" aria-label="{{#str}} deletetotemevent, local_totem {{/str}}"></i></a>{{/delete}}
			</td>
			</tr>
		{{/records}}
	</table>	
</div>